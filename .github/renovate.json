{
  "extends": [
    "config:base"
  ],
  "addLabels": ["dependencies"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["alpine"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "ignorePaths": [
    "apache/**",
    "awscli/**",
    "backup/**",
    "deluge/**",
    "fpm/**",
    "puppet**/**",
    "r10k/**",
    "webhook/**"
  ]
}
